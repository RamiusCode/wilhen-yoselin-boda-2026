<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        console.log("üíí Iniciando secci√≥n de ceremonias...");

        // ‚ïê‚ïê‚ïê ESTADO INICIAL ‚ïê‚ïê‚ïê
        gsap.set("#ceremonia-civil, #ceremonia-religiosa, #vestimenta", { opacity: 0, y: 30 });

        // ‚ïê‚ïê‚ïê ANIMACI√ìN EN CASCADA ‚ïê‚ïê‚ïê
        ScrollTrigger.create({
            trigger: "#contenedor-eventos",
            start: "top 80%",
            onEnter: () => {
                const tl = gsap.timeline();

                tl.to("#ceremonia-civil", {
                    opacity: 1,
                    y: 0,
                    duration: 0.6,
                    ease: "back.out(1.2)",
                })
                .to("#ceremonia-religiosa", {
                    opacity: 1,
                    y: 0,
                    duration: 0.6,
                    ease: "back.out(1.2)",
                }, "-=0.3")
                .to("#vestimenta", {
                    opacity: 1,
                    y: 0,
                    duration: 0.6,
                    ease: "back.out(1.2)",
                }, "-=0.3");
            },
            onLeaveBack: () => {
                gsap.set("#ceremonia-civil, #ceremonia-religiosa, #vestimenta", { opacity: 0, y: 30 });
            },
        });

        // ‚ïê‚ïê‚ïê ACTIVAR SI YA EST√Å VISIBLE ‚ïê‚ïê‚ïê
        ScrollTrigger.refresh();
        const triggerElement = document.querySelector("#contenedor-eventos");
        if (triggerElement) {
            const rect = triggerElement.getBoundingClientRect();
            const isInView = rect.top < window.innerHeight * 0.8;
            
            if (isInView) {
                const tl = gsap.timeline();
                tl.to("#ceremonia-civil", { opacity: 1, y: 0, duration: 0.6, ease: "back.out(1.2)" })
                .to("#ceremonia-religiosa", { opacity: 1, y: 0, duration: 0.6, ease: "back.out(1.2)" }, "-=0.3")
                .to("#vestimenta", { opacity: 1, y: 0, duration: 0.6, ease: "back.out(1.2)" }, "-=0.3");
            }
        }

        console.log("üíí‚ú® Secci√≥n de ceremonias activada!");
    });
</script>