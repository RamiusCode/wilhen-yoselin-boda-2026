<style>
  .font-old-standard {
    font-family: 'Old Standard TT', serif !important;
  }

  .evento-item p {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .evento-item:hover p:first-of-type {
    color: #4E5F49;
    transform: scale(1.08);
    text-shadow: 0 2px 8px rgba(78, 95, 73, 0.3);
  }

  .corazon-item {
    filter: drop-shadow(0 4px 12px rgba(78, 95, 73, 0.5));
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .corazon-item:hover {
    transform: scale(1.2) rotate(10deg);
    filter: drop-shadow(0 8px 20px rgba(78, 95, 73, 0.7));
  }

  img {
    filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.12));
    transition: filter 0.3s ease;
  }

  img:hover {
    filter: drop-shadow(0 6px 16px rgba(0, 0, 0, 0.18));
  }

  .linea-central {
    box-shadow: 0 0 15px rgba(78, 95, 73, 0.3);
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animación de hojas laterales
  gsap.fromTo('.hoja-izq-itinerario',
    { opacity: 0, x: -50 },
    {
      opacity: 0.9,
      x: 0,
      duration: 1.5,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.hoja-izq-itinerario',
        start: 'top 85%',
        toggleActions: 'play none none none',
        once: true 
      }
    }
  );

  gsap.fromTo('.hoja-der-itinerario',
    { opacity: 0, x: 50 },
    {
      opacity: 0.9,
      x: 0,
      duration: 1.5,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.hoja-der-itinerario',
        start: 'top 85%',
        toggleActions: 'play none none none',
        once: true
      }
    }
  );

  // Animación del título
  gsap.fromTo('.titulo-itinerario',
    { opacity: 0, y: -30 },
    {
      opacity: 1,
      y: 0,
      duration: 1.2,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.titulo-itinerario',
        start: 'top 85%',
        toggleActions: 'play none none none',
        once: true
      }
    }
  );
  
  // Animación SIMULTÁNEA de Línea, Corazones y Eventos
  const eventosContainer = document.getElementById('eventos-container');
  if (eventosContainer) {
      ScrollTrigger.create({
          trigger: eventosContainer,
          start: 'top 80%',
          toggleActions: 'play none none none',
          once: true,
          onEnter: () => {
              
              // Línea Central
              gsap.fromTo('.linea-central',
                  { opacity: 0, scaleY: 0 },
                  {
                      opacity: 1,
                      scaleY: 1,
                      duration: 1.5,
                      ease: 'power2.out',
                      transformOrigin: 'top center'
                  }
              );

              // Corazones
              gsap.fromTo('.corazon-item',
                  { opacity: 0, scale: 0 },
                  {
                      opacity: 1,
                      scale: 1,
                      duration: 0.8,
                      ease: 'back.out(1.7)',
                      // Se mantiene stagger: 0 para que todos los corazones inicien juntos al entrar al contenedor.
                      stagger: 0 
                  }
              );

              // Eventos
              gsap.fromTo('.evento-item',
                  { opacity: 0, y: 30 },
                  {
                      opacity: 1,
                      y: 0,
                      duration: 1,
                      ease: 'power3.out',
                      // Se mantiene stagger: 0 para que todos los eventos inicien juntos al entrar al contenedor.
                      stagger: 0 
                  }
              );
          }
      });
  }
</script>