<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        console.log("üë®‚Äçüë©‚Äçüëß‚Äçüë¶ Iniciando animaciones de padres...");

        // Estado inicial - TODO invisible
        gsap.set("#contenedor-padres", { opacity: 0, y: 30 });

        // ‚ïê‚ïê‚ïê ANIMACI√ìN SIMULT√ÅNEA - TODO AL MISMO TIEMPO ‚ïê‚ïê‚ïê
        ScrollTrigger.create({
            trigger: "#contenedor-padres",
            start: "top 80%",
            onEnter: () => {
                gsap.to("#contenedor-padres", {
                    opacity: 1,
                    y: 0,
                    duration: 1,
                    ease: "power2.out",
                });
            },
            onLeaveBack: () => {
                gsap.set("#contenedor-padres", { opacity: 0, y: 30 });
            },
        });

        // ‚ïê‚ïê‚ïê ACTIVAR ANIMACI√ìN SI YA EST√Å EN VIEWPORT ‚ïê‚ïê‚ïê
        ScrollTrigger.refresh();
        const triggerElement = document.querySelector("#contenedor-padres");
        if (triggerElement) {
            const rect = triggerElement.getBoundingClientRect();
            const isInView = rect.top < window.innerHeight * 0.8;
            
            if (isInView) {
                gsap.to("#contenedor-padres", {
                    opacity: 1,
                    y: 0,
                    duration: 1,
                    ease: "power2.out",
                });
            }
        }

        console.log("‚ú® Animaciones de padres completadas!");
    });
</script>

