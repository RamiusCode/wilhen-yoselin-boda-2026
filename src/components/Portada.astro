        <div class="text-center mb-6">
             <p class="font-romantic text-2xl md:text-3xl lg:text-4xl text-[#4a4a4a] tracking-wide">
                Noticia de √∫ltimo momento
            </p>

            <!-- <p class="font-great-vibes text-2xl md:text-3xl lg:text-4xl text-[#4a4a4a] tracking-wide">
                Noticia de √∫ltimo momento
            </p> -->
        </div>

        <!-- T√≠tulo principal -->
        <div class="text-center mb-4">
            <h1 class="font-crimson text-4xl md:text-5xl lg:text-6xl font-bold text-black tracking-tight uppercase">
                LA BODA DEL A√ëO
            </h1>
        </div>

        <!-- L√≠nea divisoria superior -->
        <div class="w-full max-w-md h-[2px] bg-black mb-1"></div>

