<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        console.log("üîû Iniciando secci√≥n solo adultos...");

        // ‚ïê‚ïê‚ïê ESTADO INICIAL ‚ïê‚ïê‚ïê
        gsap.set("#contenedor-adultos", { opacity: 0, scale: 0.95, y: 30 });

        // ‚ïê‚ïê‚ïê ANIMACI√ìN ‚ïê‚ïê‚ïê
        ScrollTrigger.create({
            trigger: "#contenedor-adultos",
            start: "top 80%",
            onEnter: () => {
                gsap.to("#contenedor-adultos", {
                    opacity: 1,
                    scale: 1,
                    y: 0,
                    duration: 0.8,
                    ease: "back.out(1.2)",
                });
            },
            onLeaveBack: () => {
                gsap.set("#contenedor-adultos", { opacity: 0, scale: 0.95, y: 30 });
            },
        });

        // ‚ïê‚ïê‚ïê ACTIVAR SI YA EST√Å VISIBLE ‚ïê‚ïê‚ïê
        ScrollTrigger.refresh();
        const triggerElement = document.querySelector("#contenedor-adultos");
        if (triggerElement) {
            const rect = triggerElement.getBoundingClientRect();
            const isInView = rect.top < window.innerHeight * 0.8;
            
            if (isInView) {
                gsap.to("#contenedor-adultos", {
                    opacity: 1,
                    scale: 1,
                    y: 0,
                    duration: 0.8,
                    ease: "back.out(1.2)",
                });
            }
        }

        console.log("üîû‚ú® Secci√≥n solo adultos activada!");
    });
</script>