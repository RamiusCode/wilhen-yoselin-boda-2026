<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<!-- üé¨ ANIMACIONES CON GSAP                                     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        console.log("üéä Iniciando animaciones del texto de invitaci√≥n...");

        // Estado inicial - TODO invisible
        gsap.set("#fondo-verde-pases", { scale: 1.1, opacity: 0 });
        gsap.set("#contenido-pases", { opacity: 0, y: 30 });

        // ‚ïê‚ïê‚ïê ANIMACI√ìN SIMULT√ÅNEA - TODO AL MISMO TIEMPO ‚ïê‚ïê‚ïê
        ScrollTrigger.create({
            trigger: "#contenido-pases",
            start: "top 80%",
            onEnter: () => {
                const tl = gsap.timeline();

                // Fondo y contenido aparecen juntos
                tl.to("#fondo-verde-pases", {
                    scale: 1,
                    opacity: 1,
                    duration: 1,
                    ease: "power2.out",
                }, 0)
                .to("#contenido-pases", {
                    opacity: 1,
                    y: 0,
                    duration: 1,
                    ease: "power2.out",
                }, 0);
            },
            onLeaveBack: () => {
                gsap.set("#fondo-verde-pases", { scale: 1.1, opacity: 0 });
                gsap.set("#contenido-pases", { opacity: 0, y: 30 });
            },
        });

        // ‚ïê‚ïê‚ïê ACTIVAR SI YA EST√Å VISIBLE ‚ïê‚ïê‚ïê
        ScrollTrigger.refresh();
        const triggerElement = document.querySelector("#contenido-pases");
        if (triggerElement) {
            const rect = triggerElement.getBoundingClientRect();
            const isInView = rect.top < window.innerHeight * 0.8;
            
            if (isInView) {
                gsap.to("#fondo-verde-pases", {
                    scale: 1,
                    opacity: 1,
                    duration: 1,
                    ease: "power2.out",
                });
                gsap.to("#contenido-pases", {
                    opacity: 1,
                    y: 0,
                    duration: 1,
                    ease: "power2.out",
                });
            }
        }

        // ‚ïê‚ïê‚ïê CORAZONES - Latido suave continuo ‚ïê‚ïê‚ïê
        const corazones = document.querySelectorAll("section .mx-3");
        corazones.forEach((corazon) => {
            gsap.to(corazon, {
                scale: 1.2,
                duration: 1,
                ease: "sine.inOut",
                yoyo: true,
                repeat: -1
            });
        });

        console.log("‚ú® Animaciones del texto completadas!");
    });
</script>

